{
    "compilerOptions": {
        "jsx": "preserve",
        "lib": ["es2018"],
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": false,
        "strict": true,
        "target": "es2015"
    },
    "include": ["./*.ts"],
    "exclude": ["node_modules"]
}
