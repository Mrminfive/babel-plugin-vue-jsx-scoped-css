{
    "compilerOptions": {
        "declaration": true,
        "lib": ["es2018"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "rootDir": "./src",
        "baseUrl": "./src",
        "outDir": "./dist",
        "preserveConstEnums": false,
        "sourceMap": true,
        "strict": true,
        "target": "es2015"
    },
    "include": ["src/*.ts", "typings/*.ts"],
    "exclude": ["node_modules"]
}
